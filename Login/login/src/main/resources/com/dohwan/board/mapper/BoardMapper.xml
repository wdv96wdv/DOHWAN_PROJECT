<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dohwan.board.mapper.BoardMapper">

    <resultMap type ="Boards" id="BoardMap">
        <id property="no" column="no"/>
        <result property="no" column="no"/>
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="writer" column="writer"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        
        <association property="file" column="no" javaType="Files" select="selectMainFile"></association>
    </resultMap>

    <!-- 메인(썸네일) 파일 조회 -->
    <select id="selectMainFile" resultType="Files">
    SELECT *
    FROM files
    WHERE p_no = #{no}
        AND p_table = 'boards'
        And TYPE = 'MAIN'
    </select> 

    <!-- 전체 목록 조회 -->
    <select id="list" resultMap="BoardMap">
        SELECT * FROM boards
        ORDER BY created_at DESC
    </select>

    <!-- 단건 조회 (PK로) -->
    <select id="select"  resultType="Boards">
        SELECT * FROM boards WHERE no = #{no}
    </select>

    <!-- 단건 조회 (id로) -->
    <select id="selectById"  resultType="Boards">
        SELECT * FROM boards WHERE id = #{id}
    </select>

    <!-- 등록 -->
    <insert id="insert" parameterType="Boards" useGeneratedKeys="true" keyProperty="no">
        INSERT INTO boards
        (id, title, writer, content)
        VALUES
        (#{id}, #{title}, #{writer}, #{content})
    </insert>

    <!-- 전체 수정 (PK로) -->
    <update id="update" parameterType="Boards">
        UPDATE boards
        <set>>
            <if test="title != null">title = #{title},</if>
            <if test="writer != null">writer = #{writer},</if>
            <if test="content != null">content = #{content},</if>
        </set>
        WHERE no = #{no}

    </update>

    <!-- 전체 수정 (id로) -->
    <update id="updateById" parameterType="Boards">
        UPDATE boards
      <set>
            <if test="title != null">title = #{title},</if>
            <if test="writer != null">writer = #{writer},</if>
            <if test="content != null">content = #{content},</if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <!-- 삭제 (PK로) -->
    <delete id="delete" parameterType="long">
        DELETE FROM boards WHERE no = #{no}
    </delete>

    <!-- 삭제 (id로) -->
    <delete id="deleteById" parameterType="string">
        DELETE FROM boards WHERE id = #{id}
    </delete>

</mapper>